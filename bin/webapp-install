#!/bin/bash
source "$HOME/.local/share/dotfiles/bin/lib/helpers.sh"

if [ "$#" -ne 3 ]; then
  log_header "Web App Installer"
  log_info "Let's create a new web app you can start with the app launcher."
  echo
  APP_NAME=$(gum input --prompt "Name> " --placeholder "My favorite web app")
  APP_URL=$(gum input --prompt "URL> " --placeholder "https://example.com")
  ICON_URL=$(gum input --prompt "Icon URL> " --placeholder "See https://dashboardicons.com (must use PNG!)")
else
  APP_NAME="$1"
  APP_URL="$2"
  ICON_URL="$3"
fi

if [[ -z "$APP_NAME" || -z "$APP_URL" || -z "$ICON_URL" ]]; then
  log_error "You must set app name, app URL, and icon URL!"
  exit 1
fi

ICON_DIR="$HOME/.local/share/applications/icons"
DESKTOP_FILE="$HOME/.local/share/applications/$APP_NAME.desktop"
ICON_PATH="$ICON_DIR/$APP_NAME.png"

mkdir -p "$ICON_DIR"

log_step "Downloading icon..."
if ! curl -sL -o "$ICON_PATH" "$ICON_URL"; then
  log_error "Failed to download icon."
  exit 1
fi

cat >"$DESKTOP_FILE" <<EOF
[Desktop Entry]
Version=1.0
Name=$APP_NAME
Comment=$APP_NAME
Exec=~/.local/share/dotfiles/bin/launch-webapp $APP_URL
Terminal=false
Type=Application
Icon=$ICON_PATH
StartupNotify=true
EOF

chmod +x "$DESKTOP_FILE"

log_success "Web app created: $APP_NAME"
show_done
