#!/bin/bash

STARSHIP_DIR="$HOME/.config/starship"
CONFIGS_DIR="$STARSHIP_DIR/configs"
CONFIG_LINK="$HOME/.config/starship.toml"

if [[ ! -d "$CONFIGS_DIR" ]]; then
  notify-send "Error" "Starship configs directory not found: $CONFIGS_DIR"
  exit 1
fi

configs=$(find "$CONFIGS_DIR" -mindepth 1 -maxdepth 1 -type f -name "*.toml" | sort | while read -r path; do
  config_name="$(basename "$path" .toml)"
  display_name=$(echo "$config_name" | sed 's/^config-//; s/-/ /g; s/\b\(.)\)/\u\1/g')
  echo "$display_name"
done)

if [[ -z "$configs" ]]; then
  notify-send "Error" "No starship configs found"
  exit 1
fi

selected=$(echo "$configs" | walker --dmenu --theme menus --width 295 --minheight 1 --maxheight 600 -p "Select" 2>/dev/null)

if [[ "$selected" == "CNCLD" || -z "$selected" ]]; then
  exit 0
fi

selected=$(echo "$selected" | tr -d '\n' | xargs)

config_name=$(echo "$selected" | tr '[:upper:]' '[:lower:]' | tr ' ' '-')
config_file="$CONFIGS_DIR/config-$config_name.toml"

if [[ ! -f "$config_file" ]]; then
  config_file="$CONFIGS_DIR/$config_name.toml"
fi

if [[ ! -f "$config_file" ]]; then
  notify-send "Error" "Starship config '$config_name' does not exist"
  exit 1
fi

if [[ -e "$CONFIG_LINK" || -L "$CONFIG_LINK" ]]; then
  rm -f "$CONFIG_LINK"
fi

ln -s "$config_file" "$CONFIG_LINK"

notify-send "Starship Config" "Switched to $selected"
